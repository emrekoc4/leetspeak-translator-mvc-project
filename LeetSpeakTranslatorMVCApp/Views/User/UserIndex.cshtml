@model Entities.ViewModels.UserContentVM
@{
    ViewData["Title"] = "SearchEngine";
    Layout = "~/Views/Shared/HomeLayout/_Login.cshtml";
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/HomeRoot/fonts/icomoon/style.css">

    <link rel="stylesheet" href="~/HomeRoot/css/owl.carousel.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/HomeRoot/css/bootstrap.min.css">

    <!-- Style -->
    <link rel="stylesheet" href="~/HomeRoot/css/style.css">

</head>
<body>
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <a href="/User/UpdateUser?userName=@Model.UserName"><img src="~/HomeRoot/img/undraw_remotely_2j6y.svg" alt="Edit Profile" class="img-fluid"></a>
                </div>
                <div class="col-md-6 contents">
                    <div class="row justify-content-center">
                        <div class="col-md-8">
                            <div class="mb-4">
                                <h3 style="float:left">SEARCH ENGINE</h3>
                               
                                <p class="mb-4">Please type the text you want to be translated</p>
                            </div>
                            <form asp-controller="User" asp-action="UserIndex" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group last mb-4">
                                    <label asp-for="Content">Please Type The Text You Want To Be Translated</label>
                                    <input asp-for="Content" class="form-control">
                                    <span asp-validation-for="Content" class="text-danger"></span>
                                </div>
                                <input type="submit" value="Translate" class="btn btn-block btn-primary">
                                <a class="btn btn-block btn-primary" asp-controller="User" asp-action="SearchHistory">Search History</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>