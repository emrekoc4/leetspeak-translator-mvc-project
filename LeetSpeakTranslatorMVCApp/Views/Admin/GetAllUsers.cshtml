@using Entities.ViewModels
@model List<GetUsersVM>
@{
    ViewData["Title"] = "Users";
     Layout = "~/Views/Shared/WebGridLayout/_AdminLayout.cshtml";
}

<h1>Users</h1>

<link href="~/css/dataTables.bootstrap4.min.css" rel="stylesheet">


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Search History</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>UserName</th>
                        <th>FirstName</th>
                        <th>LastName</th>
                        <th>Role</th>
                        <th>Profile Photo</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>UserName</th>
                        <th>FirstName</th>
                        <th>LastName</th>
                        <th>Role</th>
                        <th>Profile Photo</th>
                        <th></th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.UserName</td>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.Role</td>
                            <td><img src="~/images/@item.Photo" alt="Image" style="max-width: 20%"></td>
                            <td><a href="/User/UpdateUser?userName=@item.UserName" class="btn btn-primary" />Edit User's Profile</td>
                            <td><a href="/Admin/DeleteUser?userId=@item.UserId" class="btn btn-warning" />Delete User</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>