@model Entities.ViewModels.CreateUserVM

@{
    ViewData["Title"] = "CreateUser";
    Layout = "~/Views/Shared/HomeLayout/_Login.cshtml";
}


<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/HomeRoot/fonts/icomoon/style.css">

    <link rel="stylesheet" href="~/HomeRoot/css/owl.carousel.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/HomeRoot/css/bootstrap.min.css">

    <!-- Style -->
    <link rel="stylesheet" href="~/HomeRoot/css/style.css">

    <title>Create New User</title>
</head>
<body>


    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <a asp-controller="Home" asp-action="Index"><img src="~/HomeRoot/img/register.jpg" alt="Image" class="img-fluid"></a>

                </div>
                <div class="col-md-6 contents">
                    <div class="row justify-content-center">
                        <div class="col-md-8">
                            <div class="mb-4">
                                <p class="mb-4">Create Your Profile</p>
                            </div>
                            <form asp-controller="Admin" asp-action="AddUser" method="post" enctype="multipart/form-data">
                                <div class="form-group first">
                                    <label asp-for="FirstName">FirstName</label>
                                    <input asp-for="FirstName" class="form-control">
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="form-group first">
                                    <label asp-for="LastName">LastName</label>
                                    <input asp-for="LastName" class="form-control">
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                                <div class="form-group last mb-4">
                                    <label asp-for="UserName">UserName</label>
                                    <input asp-for="UserName" class="form-control">
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="form-group last mb-4">
                                    <label asp-for="Password">Password</label>
                                    <input asp-for="Password" class="form-control" type="password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group last mb-4">
                                    <label asp-for="Photo" class="control-label"></label>
                                    <div class="custom-file">
                                        <input asp-for="Photo" class="custom-file-input" id="customFile" filtertype />
                                        <label class="custom-file-label" for="customFile">Choose File</label>
                                    </div>
                                    <span asp-validation-for="Photo" class="text-danger"></span>
                                </div>
                                <div class="form-group last mb-4">
                                   @* <input asp-for="IsAdmin" class="form-check-input" type="checkbox" name="IsAdmin" value="true" />
                                    <label class="form-check-label">
                                        Create As An Admin
                                    </label>*@
                                    <select name="IsAdmin" class="form-control" asp-for="IsAdmin">
                                        <option selected="selected"> Please Choose User Type </option>
                                        <option > Admin </option>
                                        <option > User </option>
                                    </select>
                                </div>
                                <input type="submit" value="Create" class="btn btn-block btn-primary">
                                <a class="btn btn-block btn-outline-primary" asp-controller="Admin" asp-action="GetAllUsers">Get All Users</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
